      {
        "id": 4,
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "Utilisateurs actifs",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(DISTINCT user_id) as count FROM tasks WHERE created_at > NOW() - INTERVAL '7 days'",
            "format": "table",
            "datasource": {
              "type": "postgres",
              "uid": "PostgreSQL"
            }
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "purple" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "type": "timeseries",
        "title": "Tâches créées par jour",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('day', created_at) as time, COUNT(*) as count FROM tasks WHERE created_at > NOW() - INTERVAL '30 days' GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": {
              "type": "postgres",
              "uid": "PostgreSQL"
            }
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "type": "piechart",
        "title": "Répartition par statut",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT status, COUNT(*) as count FROM tasks GROUP BY status",
            "format": "table",
            "datasource": {
              "type": "postgres",
              "uid": "PostgreSQL"
            }
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "right" },
          "pieType": "pie"
        }
      },
      {
        "id": 7,
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "type": "timeseries",
        "title": "Temps passé par jour (heures)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('day', created_at) as time, SUM(EXTRACT(EPOCH FROM (actual_time_end - actual_time_start))/3600) as hours FROM tasks WHERE actual_time_start IS NOT NULL AND actual_time_end IS NOT NULL AND created_at > NOW() - INTERVAL '30 days' GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": {
              "type": "postgres",
              "uid": "PostgreSQL"
            }
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            },
            "unit": "h"
          }
        }
      },
      {
        "id": 8,
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "type": "table",
        "title": "Tâches récentes",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT title, status, priority, created_at FROM tasks ORDER BY created_at DESC LIMIT 10",
            "format": "table",
            "datasource": {
              "type": "postgres",
              "uid": "PostgreSQL"
            }
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        }
      }
    ]
