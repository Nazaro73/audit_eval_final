    "panels": [
      {
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "Nombre total de tâches",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as count FROM tasks",
            "format": "table",
            "datasource": {
              "type": "postgres",
              "uid": "PostgreSQL"
            }
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
